{
    "name": "diegocopat/laravel-jetstream-starter",
    "description": "Laravel starter with Jetstream, Inertia SSR, Teams, Spatie, and Repository Pattern",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Diego Copat",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0",
        "laravel/jetstream": "^5.0",
        "inertiajs/inertia-laravel": "^1.0",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-medialibrary": "^11.0",
        "diegocopat/laravel-repository-pattern": "^1.0"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan diegocopat:setup-project",
            "@php artisan migrate --seed"
        ]
    }
}